{% extends 'base.html.twig' %}

{% block title %}Etape index{% endblock %}

{% block body %}
    <h1>Etape index</h1>

    <table class="table">
        <thead>
            <tr class="text-white">
                <th>Id</th>
                <th>Texte_ambiance</th>
                <th>Libelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etape in etapes %}
            <tr class="text-white">
                <td>{{ etape.id }}</td>
                <td>{{ etape.texteAmbiance }}</td>
                <td>{{ etape.libelle }}</td>
                <td>
                    <a href="{{ path('app_etape_show', {'id': etape.id}) }}" class="text-white">show</a>
                    <a href="{{ path('app_etape_edit', {'id': etape.id}) }}" class="text-white">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_etape_new') }}">Create new</a>
{% endblock %}
