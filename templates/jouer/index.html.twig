{% extends 'base.html.twig' %}

{% block title %}Hello JouerController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="row">
    <div class="col-sm-6 mb-3 mb-sm-0">
        <div class="card" style="width: 18rem;">
            <div class="card-body text-center d-flex flex-column">

                {% for personnage in personnages %}

                    <img src="{{ asset('images/avatars/'~personnage.avatar.getNomFichier())}}">
                    <a href="{{path('app_choix_aventure',{'idPersonnage': personnage.id})}}" >
                        {{ personnage.prenom }} {{ personnage.nom }}
                    </a>
                    
                {% else %}
                    Aucun personnage de trouvé
                {% endfor %}
                <a href="{{ path('app_jouer_new') }}" class="btn btn-primary">Créer</a>
            </div>
        </div>
    </div>
<div>
    
{% endblock %}



